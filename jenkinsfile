pipeline {
    agent any
    environment {
        DOCKER_IMAGE_TAG = "${BUILD_NUMBER}"
    }
    stages {
        stage ("code"){
            steps {
                git url: 'https://github.com/Chaitannyaa/Jenkins-Project.git', branch: 'production'
            }
        }
        stage ("Build"){
            steps {
                sh 'docker build -t chaitannyaa/multi_container_app:worker-${DOCKER_IMAGE_TAG} .'
                sh 'docker build -t chaitannyaa/multi_container_app:result-${DOCKER_IMAGE_TAG} .'
                sh 'docker build -t chaitannyaa/multi_container_app:vote-${DOCKER_IMAGE_TAG} .'
            }
        }
        stage ("login and push image"){
            steps {
                echo 'Logging into docker and pushing an image on dockerhub'
                withCredentials([usernamePassword(credentialsId: 'DockerHub', passwordVariable: 'password', usernameVariable: 'user')]) {
                    sh "docker login -u ${env.user} -p ${env.password}"
                    sh "docker push chaitannyaa/multi_container_app:worker-${DOCKER_IMAGE_TAG}"
                    sh "docker push chaitannyaa/multi_container_app:result-${DOCKER_IMAGE_TAG}"
                    sh "docker push chaitannyaa/multi_container_app:vote-${DOCKER_IMAGE_TAG}"
                }
            }
        }
        stage("Deploy"){
            steps {
                 sh "docker-compose down && docker-compose up -d"
            }
        }
    }
}
